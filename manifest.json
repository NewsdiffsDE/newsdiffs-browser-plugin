 {
  "name": "NewsDiffsDE Browser Plugin",
  "manifest_version": 2,
  "version": "1",
  "description": "Display content changes on news websites",
  "browser_action": {
    "name": "Manipulate DOM"
  },
  "content_scripts": [ {
    "js": [ "js/jquery/jquery.min.js", "diff_match_patch_uncompressed.js", "background.js" ],
    "matches": [
	"*://*.bild.de/*", 
        "*://*.zeit.de/*", 
        "*://*.focus.de/*", 
        "*://*.spiegel.de/*", 
        "*://*.stern.de/*", 
        "*://*.faz.de/*", 
        "*://*.rponline.de/*", 
        "*://*.sueddeutsche.de/*"],
    "run_at": "document_end"
  }]
}
