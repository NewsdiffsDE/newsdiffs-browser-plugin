{
  "name": "Newsdiffs Deutschland",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Dieses Plugin befindet sich noch in der Entwicklung",
  "homepage_url": "http://www.newsdiffs.de",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.min.js", "js/diff_match_patch_uncompressed.js", "src/bg/background.js"
    ],
    "persistent": true

  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "src/options/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
"web_accessible_resources": [
    "css/*.css"
  ],
  "omnibox": {
    "keyword": "newsdiffs"
  },
  "permissions": [
    "storage",
    "tabs",
    "*://*.bild.de/*", 
    "*://*.zeit.de/*", 
    "*://*.focus.de/*", 
    "*://*.spiegel.de/*", 
    "*://*.stern.de/*", 
    "*://*.faz.de/*", 
    "*://*.rponline.de/*", 
    "*://*.sueddeutsche.de/*",
    "*://moreno-gummich.com/*",
    "*://*.nytimes.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.bild.de/*", 
        "*://*.zeit.de/*", 
        "*://*.focus.de/*", 
        "*://*.spiegel.de/*", 
        "*://*.stern.de/*", 
        "*://*.faz.de/*", 
        "*://*.rponline.de/*", 
        "*://*.sueddeutsche.de/*",
        "*://moreno-gummich.com/*",
        "*://*.nytimes.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": ["js/jquery/jquery.min.js", "js/lscache.js","js/diff_match_patch_uncompressed.js", "js/content.js"],
      "run_at": "document_end"
    }
  ]
}
